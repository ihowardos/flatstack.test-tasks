p#notice = notice

.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-body
        p
          strong Title:
          = "  #{event.title}"
        p
          strong Description:
          = " #{event.description}"
        p
          strong Start date:
          = " #{event.date}"

        p
          strong End date:
          = " #{event.end_date}"


        p
          strong Author:
          '
          =link_to event.get_username(event.user_id), user_path(event.user_id)

        = event.recurring

        = link_to 'Back', events_path
